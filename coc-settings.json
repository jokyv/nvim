{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "html",
        "markdown",
        "javascript",
        "yaml",
        "json",
        "python"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.jediEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/mconda/bin/black",
    "python.linting.pylintPath": "~/mconda/bin/pylint",
    "python.condaPath": "~/mconda/bin/conda",
    "python.jediPath": "~/mconda/lib/python3.8/site-packages",
    "python.pythonPath": "~/mconda/bin/python",
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/snips"
    ],
    //"snippets.userSnippetsDirectory": "~/config/nvim/snips",
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings": {
        "<cr>": [
            "expandable?",
            "expand",
            "open"
        ],
        "v": "open:vsplit"
    },
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    }
}
